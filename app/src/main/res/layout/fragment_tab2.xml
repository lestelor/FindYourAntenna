<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444" />
    <TextView
        android:id="@+id/tv_mobile_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textAlignment="center"
        android:textSize="12sp" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_mobile_signalIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_network_green" />

            <TextView
                android:id="@+id/tv_mobile_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/tv_mobile_operator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Operator name"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_mobile_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operator" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mobile_network"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="network:" />

                <TextView
                    android:id="@+id/tv_mobile_networkType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="networkType"
                    android:textColor="@color/cpb_blue" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mobile_freq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="frequency:" />

                <TextView
                    android:id="@+id/tv_mobile_freq_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="networkType"
                    android:textColor="@color/cpb_blue" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_sim_card_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIM ICC-ID:"/>
            <TextView
                android:id="@+id/tv_iccid"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
      </LinearLayout>

    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444" />
    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WIFI"
        android:textAlignment="center"
        android:textSize="12sp" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444" />
    <ListView
        android:id="@+id/wifiList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.97"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewFragment2"
        ads:adSize="LARGE_BANNER"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        ads:adUnitId="@string/BannerID">
    </com.google.android.gms.ads.AdView>


</LinearLayout>