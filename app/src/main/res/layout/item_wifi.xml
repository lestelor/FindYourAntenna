<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_wifi_signalIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_network_green" />

            <TextView
                android:id="@+id/tv_wifi_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tv_wifi_ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Ssid"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_wifi_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mac"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_wifi_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="security"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wifi_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="channel" />

                <TextView
                    android:id="@+id/tv_wifi_channelInt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="channelID"
                    android:textColor="@color/cpb_blue" />
                <TextView
                    android:id="@+id/tv_wifi_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="frequency" />
            </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>