<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#7fffad42"
    android:orientation="vertical"
    tools:context=".ui.main.Tab1">
<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tv_networkname"
    android:text=""
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp" />


    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/speedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RadioGroup
            android:id="@+id/rgType"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:layout_weight="0.33">

            <RadioButton
                android:id="@+id/rbHttp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rbHTTP" />

            <RadioButton
                android:id="@+id/rbBittorrent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rbBitTorrent" />

            <RadioButton
                android:id="@+id/rbFtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rbFTP" />

        </RadioGroup>


        <Button

            android:id="@+id/btSpeedTest"
            android:layout_width="56sp"
            android:layout_height="56sp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_switch_on_off" />

        <RadioGroup
            android:id="@+id/rgFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:layout_marginStart="20dp"

>

            <RadioButton
                android:id="@+id/rb1MB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb1MB"
                />

            <RadioButton
                android:id="@+id/rb10MB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb10MB" />

            <RadioButton
                android:id="@+id/rb100MB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb100MB" />
        </RadioGroup>


    </LinearLayout>
    <TableRow
        android:id="@+id/hr2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSpeedtestDownloadFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/download" />

            <TextView
                android:id="@+id/tvSpeedtestDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:text="-"/>

            <TextView
                android:id="@+id/tvSpeedtestDownloadFixed2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Mbps" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSpeedtestUploadFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/upload" />

            <TextView
                android:id="@+id/tvSpeedtestUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:text="-"/>

            <TextView
                android:id="@+id/tvSpeedtestUploadFixed2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mbps" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLatencyFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/latency" />

            <TextView
                android:id="@+id/tvLatency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:text="-"/>

            <TextView
                android:id="@+id/tvLatencyFixed2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ms" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewFragment1"
        ads:adSize="SMART_BANNER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</LinearLayout>